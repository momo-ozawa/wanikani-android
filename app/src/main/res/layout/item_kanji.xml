<?xml version="1.0" encoding="utf-8"?>
<com.mozawa.wanikaniandroid.ui.widgets.RatioRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.5dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/characterRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/characterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="50sp"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/meaningTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterRelativeLayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

</com.mozawa.wanikaniandroid.ui.widgets.RatioRelativeLayout>